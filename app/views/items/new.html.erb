<h1>新規投稿</h1>

<%= form_for @item do |f| %>
<%= f.label :title %>
<%= f.text_field :title %>

<%= f.label :content %>
<%= f.text_field :content %>

<%= f.label :count %>
<%= f.text_field :count %>

<%= f.label :place %>
<%= f.text_field :place %>

<%= f.label :promise_at %>
<%= f.text_field :promise_at %>

<%= f.label :state %>
<%= f.text_field :state %>

<%= f.label :image %>
<%= f.file_field :image %>

<%= f.submit "投稿" %>

<% end %>