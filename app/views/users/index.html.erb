<h1>ユーザの一覧</h1>
<% @users.each do |user| %>
  <%#= user.name %>
  <%#= link_to user.name, user_path(user) %>
    <% if user.id != current_user.id %>
    <li>
      <div class="item">
        <%= link_to user.name, user %>
        <%= link_to 'メッセージ', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: :post %>
      </div>
    </li>
  <% end %>
  </div>
<% end %>
